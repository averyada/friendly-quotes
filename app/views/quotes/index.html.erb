<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<% if user_signed_in? %>
  <%= link_to "Sign Out", users_sign_out_path %>
<% else %>
  <%= link_to "Sign In", new_user_session_path %>
  |
  <%= link_to "Register", new_user_registration_path %>
<% end %>

<h1>Quotes</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.username %></td>
        <td><%= quote.body %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @quotes %>


<br>

<%= link_to 'New Quote', new_quote_path %>
